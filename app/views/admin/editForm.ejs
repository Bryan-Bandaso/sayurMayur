<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Panel | Tivotal</title>

  <!--css file-->
  <link rel="stylesheet" href="/css/admin/style.css" />

  <link rel="stylesheet" href="/css/admin/edit.css" />

  <!--font awesome-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

  <!-- DataTables -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />

  <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
</head>

<body>
  <!-- Sidebar -->
  <div class="wrapper">
    <%- include('../components/sidebar') %>

    <div class="main p-3">
      <!-- Main Content -->

      <div class="box-info">
        <div>
          <h3>Edit Data</h3>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col">
            <div class="card text-bg-light">
              <img src="<%= product.images ? product.images : 'assets/furnis.jpg' %>" class="card-img-top" alt="..." />
              <div class="card-body">
                <div class="d-flex flex-row mb-3">
                  <label for="">Nama Product</label>
                  <p class="card-text">: <%=product.name_product%></p>
                </div>
                <div class="d-flex flex-row mb-3">
                  <label for="">Kategori</label>
                  <p class="card-text">: <%= product.category %></p>
                </div>
                <div class="d-flex flex-row mb-3">
                  <label for="">Harga</label>
                  <p class="card-text">: <%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(product.price) %></p>
                </div>

                <div class="d-flex flex-row mb-3">
                  <label for="">Jumlah Barang</label>
                  <p class="card-text">: <%= product.amount %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card">
              <form action="/edit/<%= product.id %>" method="post" enctype="multipart/form-data">
                <div class="col">
                  <div class="mb-3">
                    <label for="productName" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="productName" name="name_product" value="<%= product.name_product %>" />
                  </div>
                </div>
                <div class="col d-flex justify-content-between column-gap-3">
                  <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-select" id="inputGroupSelect01" name="category">
                      <option value="Lauk Pauk" <%= product.category === 'Lauk Pauk' ? 'selected' : '' %>>Lauk Pauk</option>
                      <option value="Sayuran" <%= product.category === 'Sayuran' ? 'selected' : '' %>>Sayuran</option>
                      <option value="Buah-buahan" <%= product.category === 'Buah-buahan' ? 'selected' : '' %>>Buah-Buahan</option>
                      <option value="Bumbu Dapur" <%= product.category === 'Bumbu Dapur' ? 'selected' : '' %>>Bumbu Dapur</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="images" class="form-label">Images</label>
                    <input type="file" id="images" name="images" accept="image/*">
                  </div>
                </div>
                <div class="col d-flex justify-content-between">
                  <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= product.price %>" />
                  </div>
                  <div class="mb-3">
                    <label for="amount" class="form-label">Amount</label>
                    <input type="number" class="form-control" id="amount" name="amount" value="<%= product.amount %>" />
                  </div>
                </div>
                <button class="btn-edit" type="submit">Edit</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- End Content  -->
    </div>
  </div>
  <!-- End Sidebar -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="/script/admin.js"></script>
</body>

</html>